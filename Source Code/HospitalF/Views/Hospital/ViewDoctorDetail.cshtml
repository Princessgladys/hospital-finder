@model HospitalF.Models.DoctorModels
@using HospitalF.Constant
@using HospitalF.Models;
@{
    ViewBag.Title = "Thông tin bác sĩ";
}@*<link rel="stylesheet" href="~/Content/css/drap-drop.css" type="text/css" media="screen" />
<script type="text/javascript" src="~/Content/js/drap-drop/script.js"></script>
<script type="text/javascript" src="~/Content/js/drap-drop/redips-drag-min.js"></script>*@
<section id="widget-grid" class="">

    <!-- row -->
   <div class="row">
        <!-- NEW WIDGET START -->
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget jarviswidget-color-blueLight" id="wid-id-0"
                 data-widget-colorbutton="false"
                 data-widget-editbutton="false"
                 data-widget-togglebutton="false"
                 data-widget-deletebutton="false"
                 data-widget-fullscreenbutton="false"
                 data-widget-custombutton="false"
                 data-widget-collapsed="false"
                 data-widget-sortable="false">
                <header style="border: none; height: 40px;">
                    <span class="widget-icon" style="font-size: 180%;"><i class="fa fa-check"></i></span>
                    <h1 style="line-height: 40px; padding-left: 30px;">Thông tin bác sĩ</h1>
                </header>

                <!-- widget div-->
                <div style="border: none;">

                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->

                    </div>
                    <!-- end widget edit box -->

                    <!-- widget content -->
                    <div class="widget-body">

                        <form class="form-horizontal" action="#">

                            <fieldset>
                                <legend>
                                    <span>Thông tin chung</span>
                                </legend>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">Tên bác sĩ</label>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(m => m.Fullname, new
                                   {
                                       @type = "text",
                                       @class = "control-label",
                                       @style = "text-align: left;",
                                       @readonly = true
                                   })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Bằng cấp/Chứng chỉ</label>
                                    <div class="col-md-5">
                                        @Html.TextAreaFor(m => m.Degree, new
                                   {
                                       @style = "width: 400px; height: 150px;"
                                   })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Kinh nghiệm</label>
                                    <div class="col-md-5">
                                        @Html.TextAreaFor(m => m.Experience, new
                                   {
                                       @style = "width: 400px; height: 150px;"
                                   })
                                    </div>
                                </div>

                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Danh sách chuyên ngành</label>
                                        <div class="col-md-5">
                                        @Html.DropDownListFor(m => m.SelectedSpecialities,
                                        (SelectList)ViewBag.SpecialityList,
                                        new { @class = "select2", @style = "width:100%", @multiple = "multiple" })
                                        
                                    </div>
                                        </div>
                            </fieldset>

                        </form>

                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
            <!-- end widget -->
        </article>
        <!-- WIDGET END -->

    </div>
</section>

<script type="text/javascript">
    pageSetUp();

</script>
