@model HospitalF.Models.HospitalModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <h4 class="modal-title">
        <img src="../Content/img/HospitalF - Logo.png" alt="HospitalFinder"
             style="width: 10%; height: 10%;" />
        Thông tin bệnh viện
    </h4>
</div>
<div class="modal-body no-padding">
    <fieldset>
        <section>
            <div class="row">
                <label class="label col col-2">Tên bệnh viện</label>
                <div class="col col-10">
                    <label class="input">
                        <i class="icon-append fa fa-envelope"></i>
                        @Html.TextBoxFor(m => m.Hospital_Name)
                    </label>
                </div>
            </div>
        </section>
        <section>
            <div class="row">
                <label class="label col col-2">Email phụ</label>
                <div class="col col-10">
                    <label class="input">
                        <i class="icon-append fa fa-envelope"></i>
                        <input type="email" name="SecondaryEmail" id="SecondaryEmail"
                                placeholder="Nhập địa chỉ Email phụ">
                    </label>
                    <div class="note">
                        <p>Sử dụng trong trường hợp cần tìm lại mật khẩu.</p>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="row">
                <label class="label col col-2">Họ</label>
                <div class="col col-5">
                    <label class="input">
                        <i class="icon-append fa fa-male"></i>
                        <input name="LastName" id="LastName"
                                placeholder="Họ">
                    </label>
                </div>
                <label class="label col col-1">Tên</label>
                <div class="col col-4">
                    <label class="input">
                        <i class="icon-append fa fa-male"></i>
                        <input name="FirstName" id="FirstName"
                                placeholder="Tên">
                    </label>
                </div>
            </div>
        </section>
        <section>
            <div class="row">
                <label class="label col col-2">Số điện thoại</label>
                <div class="col col-10">
                    <label class="input">
                        <i class="icon-append fa fa-phone"></i>
                        <input name="PhoneNumber" id="PhoneNumber"
                                placeholder="Số điện thoại">
                    </label>
                </div>
            </div>
        </section>
    </fieldset>

    <footer>
        <button type="button" class="btn" data-dismiss="modal">
            <i class="fa fa-times"></i> Thoát
        </button>
    </footer>
</div>