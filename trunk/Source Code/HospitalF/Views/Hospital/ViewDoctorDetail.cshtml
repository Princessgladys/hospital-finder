@using HospitalF.Models;
@model HospitalF.Models.HospitalModel
@{
    ViewBag.Title = "ViewDoctorDetail";
    Doctor doctor = ViewBag.Doctor;
    string fullname = doctor.Last_Name + " " + doctor.First_Name;
    }
<section id="widget-grid" class="">

    <!-- row -->
    <div class="row">

        <!-- NEW WIDGET START -->
        <article class="col-sm-12 col-md-12 col-lg-12">

            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false">
                <header style="border: none; height: 40px;">
                    <span class="widget-icon" style="font-size: 180%;"><i class="fa fa-check"></i></span>
                    <h1 style="line-height: 40px; padding-left: 30px;">Thông tin bác sĩ</h1>
                </header>

                <!-- widget div-->
                <div style="border: none;">

                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->

                    </div>
                    <!-- end widget edit box -->

                    <!-- widget content -->
                    <div class="widget-body">

                        <form class="form-horizontal" action="#">

                            <fieldset>
                                <legend>
                                    <span>Thông tin chung</span>
                                </legend>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">Tên bác sĩ</label>
                                    <div class="col-md-5">
                                        <input type="text" class="control-label" style="text-align: left;">@fullname</input>
                                        @*@Html.LabelFor(m => m.HospitalName, new
                                   {
                                       @class="control-label",
                                       @style="text-align: left;"
                                   })*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Bằng cấp/Chứng chỉ</label>
                                    <div class="col-md-5">
                                        <label class="control-label" style="text-align: left;"><a href="#"></a></label>
                                        
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Loại hình dịch vụ</label>
                                    <div class="col-md-5">
                                        <label class="control-label" style="text-align: left;">@Model.HospitalTypeName</label>
                                        @*@Html.LabelFor(m => m.TypeName, new
                                   {
                                       @class="control-label",
                                       @style="text-align: left;"
                                   })*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Địa chỉ</label>
                                    <div class="col-md-5">
                                        <label class="control-label" style="text-align: left;">@Model.FullAddress</label>
                                        @* @Html.LabelFor(m => m.Address, new
                                   {
                                       @class="control-label",
                                       @style="text-align: left;"
                                   })*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Số điện thoại</label>
                                    <div class="col-md-5">
                                        <label class="control-label" style="text-align: left;">@Model.PhoneNo</label>
                                        @* @Html.LabelFor(m => m.PhoneNo, new
                                   {
                                       @class="control-label",
                                       @style="text-align: left;"
                                   })*@
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">Số Fax</label>
                                    <div class="col-md-5">
                                        <label class="control-label" style="text-align: left;">@Model.Fax</label>
                                        @* @Html.LabelFor(m => m.Fax, new
                                   {
                                       @class="control-label",
                                       @style="text-align: left;"
                                   })*@
                                    </div>
                                </div>
                            </fieldset>

                        </form>

                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
            <!-- end widget -->
        </article>
        <!-- WIDGET END -->

    </div>
</section>
