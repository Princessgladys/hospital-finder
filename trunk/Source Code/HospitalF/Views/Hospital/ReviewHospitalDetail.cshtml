@model HospitalF.Models.HospitalModel
@using HospitalF.Constant

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <h4 class="modal-title">
        <img src="../Content/img/hospital-icon.png" alt="HospitalFinder"
             style="width: 10%; height: 10%;" />
        Thông tin bệnh viện
    </h4>
</div>
<div class="modal-body no-padding">
    <form action="/Hospital/ReviewHospitalDetail" id="add-user-form" class="smart-form" method="post">
        <fieldset>
            <section>
                <div class="row">
                    <label class="label col col-2">Tên bệnh viện</label>
                    <div class="col col-10">
                        <label class="input">
                            <i class="icon-append fa fa-home"></i>
                            @Html.TextBoxFor(m => m.HospitalName, new { @disabled = "disabled" })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-2">Loại bệnh viện</label>
                    <div class="col col-10">
                        <label class="input">
                            <i class="icon-append fa fa-recycle"></i>
                            @Html.TextBoxFor(m => m.HospitalTypeName, new { @disabled = "disabled" })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-4">Giờ khám ngày thường</label>
                    <div class="col col-8">
                        <label class="input">
                            <i class="icon-append fa fa-clock-o txt-color-teal"></i>
                            @Html.TextBoxFor(m => m.OrdinaryStartTime, new { @disabled = "disabled" })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-4">Giờ khám ngày lễ và cuối tuần</label>
                    <div class="col col-8">
                        <label class="input">
                            <i class="icon-append fa fa-clock-o txt-color-teal"></i>
                            @Html.TextBoxFor(m => m.HolidayStartTime, new { @disabled = "disabled" })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-2">Địa chỉ</label>
                    <div class="col col-10">
                        <label class="input">
                            <i class="icon-append fa fa-location-arrow"></i>
                            @Html.TextBoxFor(m => m.FullAddress, new { @disabled = "disabled" })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-3">Số điện thoại chính</label>
                    <div class="col col-9">
                        <label class="input">
                            <i class="icon-append fa fa-phone"></i>
                            @Html.TextBoxFor(m => m.PhoneNo, new { @disabled = "disabled" })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-3">Số điện thoại thay thế</label>
                    <div class="col col-9">
                        <label class="input">
                            <i class="icon-append fa fa-phone"></i>
                            @Html.TextBoxFor(m => m.PhoneNo2, new { @disabled = "disabled" })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-2">Di động</label>
                    <div class="col col-10">
                        <label class="input">
                            <i class="icon-append fa fa-phone"></i>
                            @Html.TextBoxFor(m => m.PhoneNo3, new { @disabled = "disabled" })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-2">Fax</label>
                    <div class="col col-10">
                        <label class="input">
                            <i class="icon-append fa fa-fax"></i>
                            @Html.TextBoxFor(m => m.Fax, new { @disabled = "disabled" })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-2">Địa chỉ email</label>
                    <div class="col col-10">
                        <label class="input">
                            <i class="icon-append fa fa-envelope"></i>
                            @Html.TextBoxFor(m => m.HospitalEmail, new { @disabled = "disabled" })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-2">Trang web</label>
                    <div class="col col-10">
                        <label class="input">
                            <i class="icon-append fa fa-globe"></i>
                            @Html.TextBoxFor(m => m.Website, new { @disabled = "disabled" })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-2">Chuyên khoa</label>
                    <div class="col col-10">
                        <label class="textarea">
                            @Html.TextAreaFor(m => m.SpecialityName, new { @disabled = "disabled", @rows = 4 })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-2">Dịch vụ</label>
                    <div class="col col-10">
                        <label class="textarea">
                            @Html.TextAreaFor(m => m.ServiceName, new { @disabled = "disabled", @rows = 4 })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-2">Cơ sở vật chất</label>
                    <div class="col col-10">
                        <label class="textarea">
                            @Html.TextAreaFor(m => m.FacilityName, new { @disabled = "disabled", @rows = 4 })
                        </label>
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <label class="label col col-2">Từ khóa</label>
                    <div class="col col-10">
                        <label class="textarea">
                            @Html.TextAreaFor(m => m.TagsInput, new { @disabled = "disabled", @rows = 4 })
                        </label>
                    </div>
                </div>
            </section>
        </fieldset>

        <footer>
            <button type="button" class="btn" data-dismiss="modal">
                <i class="fa fa-times"></i> Thoát
            </button>
        </footer>
    </form>
</div>